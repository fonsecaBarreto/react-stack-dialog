{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",     
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],  
    "moduleResolution": "node",
    "declaration": true,                             
    "declarationMap": true,                          
    "sourceMap": true,                                                         
    "esModuleInterop": true,                          
    "strict": true,                                  
    "skipLibCheck": true,                            
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
  }
}
